<%- include('partials/header') %>
    <!-- Page Content -->
    <%- include('partials/leftMenu') %> 
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
          <div class="row">
            <% allFigurines.forEach(figurine => { 
              const lowerCaseName = figurine.name.toLowerCase();

              const lowerCaseCategory = figurine.category.toLowerCase();
              %>
            

              <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                  <a href="/article/<%= figurine.id %>">
                    <img class="card-img-top" src="./images/<%= lowerCaseName %>.png" alt="" />
                    <div class="badge-category badge badge-pill badge-<%= lowerCaseCategory %>">
                      <%= figurine.category %>
                    </div>
                  </a>
                  <div class="card-body">
                    <h4 class="card-title">
                      <a href="/article"><%= figurine.name %></a>
                    </h4>
                    <h5><%= figurine.price %> $</h5>
                    <p class="card-text">
                      <%= figurine.description %>
                    </p>
                  </div>
                  <div class="card-footer">
                    <small class="text-muted"
                      >&#9733; &#9733; &#9733; &#9733; &#9734;</small
                    >
                    <a href="/bookmarks" class="link-add-bookmarks"
                      >+ Ajouter aux favoris</a
                    >
                  </div>
                </div>
              </div>
            <% }) %>
            

            

            

          
          </div>
          <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container -->

    <%- include('partials/footer') %>